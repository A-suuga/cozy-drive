.coz-upload-status {
    height 48px
    padding 5px 16px
    box-sizing border-box
    border-bottom 1px solid #d6d8da
    transition bottom 0.5s ease-out, top 0.5s ease-out, opacity 0.2s ease-out
    display flex
}

.coz-progress-pic {
    width 30px
    height 30px
}

.coz-upload-status__content {
    flex auto
    margin-left 8px
}

.coz-upload-status--success {
    background embedurl("../assets/icons/icon-cozy.svg") center no-repeat
}

@require 'cozy-ui'

.container
    position relative

.suggestionsContainer
    position absolute
    top 100%
    margin-top .0625rem
    z-index $alert-index-mobile
    width 100%
    max-height 10.625rem
    overflow auto
    border .0625rem solid silver
    border-radius .25rem
    background white
    display none

.suggestionsContainerOpen
    display block

.input
    width 100%

.suggestionsList
    margin 0
    padding .625rem 0
    list-style none

.suggestion
    padding .625rem

.suggestionHighlighted
    background paleGrey

.recipientsContainer
    display        flex
    flex-wrap      wrap
    padding        .5rem
    border-radius  .125rem
    border         .0625rem solid silver

    &:hover
        border .0625rem solid coolGrey

    input[type=email]
        width   100%
        padding .5rem
        border  none
        &:hover
        &:focus
            border none

.recipientChip
    flex 0 0 auto
    background-color silver
    border-radius 2rem
    height        2rem
    line-height   2rem
    padding       0 1rem
    margin        0 .5rem .5rem 0

.removeRecipient
    border 0
    background-color transparent
    padding .6rem 0 0 0
    margin-left .3rem
    cursor pointer

    &:hover
        color slateGrey

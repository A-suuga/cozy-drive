@require 'cozy-ui'

.c-btn
    @extend $button

.c-btn--secondary
    @extend $button--secondary

.c-btn--share
    @extend $button--share

.coz-btn-shared
    @extend $button--share
    background-image embedurl('../assets/icon-share-white.svg')
    border-color     emerald
    background-color emerald
    color            white

    &:focus
    &:not([disabled]):not([aria-disabled=true]):hover
        background-color emerald

.coz-btn-sharedWithMe
    @extend $button--share
    background-image embedurl('../assets/icon-share-white.svg')
    border-color     portage
    background-color portage
    color            white

    &:focus
    &:not([disabled]):not([aria-disabled=true]):hover
        background-color portage


@require 'cozy-ui'

.pho-toolbar
    display flex
    margin-left auto

    a
        &.pho-action-newalbum
            background embedurl("../assets/icons/icon-album-add.svg") em(16px) center no-repeat
        &.pho-action-select
            background embedurl("../assets/icons/icon-checkbox.svg") em(16px) center no-repeat
        &.pho-action-rename
            background embedurl("../assets/icons/icon-pen.svg") em(16px) center no-repeat
        &.pho-action-addphotos
            background embedurl("../assets/icons/icon-album-add.svg") em(16px) center no-repeat
        &.pho-action-share
            background embedurl("../assets/icons/icon-share.svg") em(16px) center no-repeat
        &.pho-action-download
            background embedurl("../assets/icons/icon-download-16.svg") em(16px) center no-repeat
        &.pho-action-delete
            color pomegranate
            background embedurl("../assets/icons/icon-trash-red.svg") em(16px) center no-repeat

    .pho-btn-new
        @extend .c-btn
        @extend .c-btn--secondary
        @extend .c-btn--upload
        background-image embedurl("../assets/icons/icon-album-add.svg")

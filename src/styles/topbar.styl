@require 'cozy-ui'

.pho-content-header
  display     flex
  align-items center
  bottom-spaced(10px)
  right-spaced(32px)
  left-spaced(32px)

  @media (max-width: (768/basefont)rem)
    right-spaced(16px)
    left-spaced(16px)


.pho-content-title
  margin 0
  font-size(24px)

  @media (max-width: (768/basefont)rem)
      font-size(20px)

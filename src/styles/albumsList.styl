@require 'cozy-ui'

.pho-album-list
    display flex

.pho-album
    margin-left 2em

.pho-album-photo-item
    width         20em
    height        12em
    position      relative
    border-radius em(4px)
    object-fit    cover
    background    grey-10

.pho-album-title
    margin          .2em 0 .5em
    font-size       em(20px)
    color           black
    text-decoration none

.pho-album-link
    color           black
    text-decoration none

.pho-album-description
    color       grey-11
    font-weight normal
    font-size   em(14px)

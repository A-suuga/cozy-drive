@import 'cozy-ui'

.container
    position relative

.suggestionsContainer
    position absolute
    top 100%
    margin-top 1px
    z-index 500
    width 100%
    max-height em(170px)
    overflow auto
    border 1px solid silver
    border-radius 4px
    background white
    display none

.suggestionsContainerOpen
    display block

.suggestionsList
    margin 0
    padding 10px 0
    list-style none

.suggestion
    padding 10px

.suggestionHighlighted
    background pale-grey

.suggestion-primary
    font-weight bold

.suggestion-secondary
    color cool-grey
